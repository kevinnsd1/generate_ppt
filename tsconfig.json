{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        /* Modules */
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        /* Emit */
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": false,
        "declaration": true,
        "declarationMap": true,
        /* Interop Constraints */
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        /* Type Checking - Permissive mode for easier migration */
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
        "noImplicitThis": false,
        "alwaysStrict": false,
        /* Additional Checks */
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,
        /* Completeness */
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "exports",
        "repro_slide.ts",
        "sequelize-model-generator.ts"
    ]
}